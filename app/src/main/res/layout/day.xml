<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivMiddleDay"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_sunset"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/tvHighDayDegrees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="20"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivMiddleDay"
        app:layout_constraintEnd_toStartOf="@+id/tvLowDayDegrees"
        app:layout_constraintTop_toTopOf="@+id/ivMiddleDay" />

    <TextView
        android:id="@+id/tvLowDayDegrees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="10"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivMiddleDay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivMiddleDay" />

    <TextView
        android:id="@+id/tvNamOfDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="wednesday"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@+id/ivMiddleDay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvConditionDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="cloudy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvNamOfDay"
        app:layout_constraintStart_toStartOf="@+id/tvNamOfDay"
        app:layout_constraintTop_toBottomOf="@+id/tvNamOfDay" />
</androidx.constraintlayout.widget.ConstraintLayout>